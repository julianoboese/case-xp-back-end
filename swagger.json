          "amount": {
            "type": "number"
          }
        }
      },
      "order": {
        "type": "object",
        "properties": {
          "assetId": {
            "type": "number"
          },
          "amount": {
            "type": "number"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "login",
      "description": "Operations related to login"
    },
    {
      "name": "register",
