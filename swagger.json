      "post": {
        "summary": "User login",
        "description": "Authenticate user data with JWT",
        "tags": ["login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/login"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/token"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request. Dados inseridos incorretamente."
          },
          "401": {
            "description": "Authorization. Senha incorreta."
          },
          "404": {
            "description": "Not Found. Usuário não cadastrado."
          }
